    <link rel="shortcut icon" href="assets/images/fav.jpg">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/fontawsom-all.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css" />
</head>

<body>
    <div class="container-fluid ">
        
                <div class=" no-pdding login-box">
                    <div class="row no-margin w-100 bklmj">
                        <div class="col-lg-6 col-md-6 log-det">
                            
                            <h2>Register</h2>
                            
                           
                            <div class="row no-margin past">
                                <p>Dont Have an Account? <span>Create your Account</span> </p>
                            </div>


                            <div class="text-box-cont">
                                <form>
                                <div class="input-group mb-3">
                                   
                                    <input type="text" class="form-control" placeholder="Username" name="username" >
                                   
                                    
                                </div>
                                <span class="user err text-danger"></span>
                                 <div class="input-group mb-3">
                                    <input type="password" class="form-control" placeholder="Password" name="password">
                                    
                                   
                                </div>
                                <span class="pass err text-danger"></span>
                                <div class="right-bkij mb-3">
                                    <button class="btn btn-success btn-round">Sign Up</button>
                                </div>  
                                <br> 
                            </form>
                            </div>
                            
                        

                        </div>
                        <div class="col-lg-6 col-md-6 box-de">
                            <div class="ditk-inf">
                                <h2 class="w-100">Welcome Back </h2>
                                <p>Already have account ? <br> clicking the Signin Button</p>
                                <a type="button" class="btn btn-success btn-round" href="/login">Sign in</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       
  <script>
     const form = document.querySelector('form');
     const usererr = document.querySelector('.user.err');
     const passerr = document.querySelector('.pass.err');

     usererr.textContent = '';
     passerr.textContent = '';

      form.addEventListener('submit',async (e) => {
        e.preventDefault()

          const username = form.username.value;
          const password = form.password.value;

         try{
            const request = await fetch('/register', {
                method : 'POST',
                body : JSON.stringify({username, password}),
                headers :{'Content-Type': 'application/json'}
            });
            const data = await request.json();
            if(data.errors){
                usererr.textContent = data.errors.username;
                passerr.textContent = data.errors.password;
            }
            if(data.user){
                location.assign('/');
            }
            console.log(data);
         }
         catch(err){
            console.log(err);
         }
      });
  </script>          
</body>

